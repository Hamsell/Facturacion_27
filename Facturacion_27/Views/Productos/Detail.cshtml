@model Facturacion_27.Models.Producto

<h2>Detalle del Producto</h2>

<p><strong>Nombre:</strong> @Model.Nombre</p>
<p><strong>Precio Unitario:</strong> @Model.PrecioUnitario</p>
<p><strong>Stock:</strong> @Model.Stock</p>

<a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
<a asp-action="Index">Volver al listado</a> |
<a asp-action="Delete" asp-route-id="@Model.Id">Eliminar</a>
